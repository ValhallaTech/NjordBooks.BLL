@model Notification
@using Microsoft.AspNetCore.Identity
@using NjordBooks.BLL.Models
@inject UserManager<NjordBooksUser> UserManager
@{
    ViewData["Title"] = "Create";
    var user = await UserManager.GetUserAsync(User);
}

<div class="row">
    <div class="col-md mt-3">
        <h1>Create</h1>
        <h4>Notification</h4>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="HouseholdId" class="control-label" style="display:none;"></label>
                        <input type="hidden" asp-for="HouseholdId" class="form-control" value="@user.HouseholdId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Created" class="control-label" hidden></label>
                        <input type="hidden" asp-for="Created" class="form-control" value="@DateTimeOffset.Now" />
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Body" class="control-label"></label>
                        <input asp-for="Body" class="form-control" />
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
